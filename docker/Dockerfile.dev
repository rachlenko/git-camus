# Development Docker image for git-camus
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    curl \
    vim \
    htop \
    && rm -rf /var/lib/apt/lists/*

# Create user for running the application
RUN groupadd --gid 1000 devuser && \
    useradd --uid 1000 --gid devuser --shell /bin/bash --create-home devuser

# Set working directory
WORKDIR /app

# Copy requirements and install dependencies (including dev dependencies)
COPY pyproject.toml ./
RUN pip install --no-cache-dir -e ".[dev,test]"

# Change to non-root user
USER devuser

# Set default command for development
CMD ["bash"]